.daily-game {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* Left Sidebar - Game Interface */
.left-sidebar {
  position: fixed;
  top: 0;
  left: 0;
  width: 350px;
  height: 100vh;
  z-index: 10;
  padding: 20px;
  box-sizing: border-box;
  /* No background - transparent */
}

.game-content {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 15px;
  padding: 20px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: white;
  height: 100%;
  overflow-y: hidden;
}



.sidebar-content {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 15px;
  padding: 20px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: white;
  text-align: center;
  height: fit-content;
}

/* Game Interface Styling */
.game-header h1 {
  margin: 0 0 10px 0;
  font-size: 2em;
  color: #ffffff;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.game-header p {
  margin: 0 0 20px 0;
  font-size: 1.1em;
  color: #e0e0e0;
}

.hint-display {
  background: rgba(255, 193, 7, 0.2);
  border: 1px solid #ffc107;
  border-radius: 8px;
  padding: 12px;
  margin: 15px 0;
  color: #fff3cd;
  font-size: 0.95em;
}

.guess-form {
  margin: 20px 0;
}

.guess-input {
  width: 100%;
  padding: 12px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.1);
  color: white;
  font-size: 16px;
  margin-bottom: 12px;
  box-sizing: border-box;
}

.guess-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.guess-input:focus {
  outline: none;
  border-color: #4a90e2;
  background: rgba(255, 255, 255, 0.15);
}

.guess-button {
  width: 100%;
  padding: 12px 24px;
  background: linear-gradient(135deg, #4a90e2, #357abd);
  border: none;
  border-radius: 8px;
  color: white;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.guess-button:hover {
  background: linear-gradient(135deg, #357abd, #2968a3);
  transform: translateY(-1px);
}

.guess-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

/* Game Results */
.game-results {
  text-align: center;
  margin: 20px 0;
}

.win-message h2,
.lose-message h2 {
  margin: 0 0 15px 0;
  font-size: 1.5em;
}

.win-message {
  color: #d4edda;
}

.lose-message {
  color: #f8d7da;
}

.answer-reveal {
  font-size: 1.1em;
  margin: 15px 0;
  padding: 12px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
}

.fun-fact,
.description {
  font-size: 0.95em;
  line-height: 1.4;
  margin: 15px 0;
  padding: 12px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8px;
}

.play-again-btn {
  padding: 10px 20px;
  background: linear-gradient(135deg, #28a745, #20873a);
  border: none;
  border-radius: 8px;
  color: white;
  font-size: 14px;
  cursor: pointer;
  margin-top: 15px;
  transition: all 0.3s ease;
}

.play-again-btn:hover {
  background: linear-gradient(135deg, #20873a, #1e7e34);
  transform: translateY(-1px);
}

/* Guesses List */
.guesses-list {
  margin-top: 25px;
  padding-top: 20px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.guesses-list h3 {
  margin: 0 0 15px 0;
  font-size: 1.1em;
  color: #ffffff;
}

.guess-item {
  padding: 8px 12px;
  margin: 6px 0;
  border-radius: 6px;
  font-size: 0.9em;
}

.guess-item.correct {
  background: rgba(40, 167, 69, 0.3);
  border: 1px solid #28a745;
  color: #d4edda;
}

.guess-item.incorrect {
  background: rgba(220, 53, 69, 0.3);
  border: 1px solid #dc3545;
  color: #f8d7da;
}

.hints-remaining {
  text-align: center;
  font-size: 0.9em;
  color: #ffc107;
  margin: 15px 0 0 0;
  font-weight: 500;
}

/* Right sidebar content */
.logo h2 {
  font-size: 2em;
  margin: 0 0 20px 0;
}

.sidebar-placeholder p {
  font-size: 0.9em;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
}

/* Loading state */
.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 1.2em;
  z-index: 100;
  text-align: center;
  background: rgba(0, 0, 0, 0.7);
  padding: 20px 40px;
  border-radius: 10px;
  backdrop-filter: blur(10px);
}

/* Responsive Design */
@media (max-width: 768px) {
  .left-sidebar {
    width: 100%;
    height: 50%;
    position: fixed;
    bottom: 0;
    left: 0;
    top: auto;
    padding: 15px;
  }
  
  .right-sidebar {
    width: 100%;
    height: auto;
    position: fixed;
    top: 10px;
    right: 10px;
    left: 10px;
    padding: 10px;
  }
  
  .game-content,
  .sidebar-content {
    height: auto;
    max-height: 100%;
  }
}

